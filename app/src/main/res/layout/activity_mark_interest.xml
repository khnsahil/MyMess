<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSurvey">

    <TextView
        android:id="@+id/tv_mess_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambuja Mess"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Mark Your Intrest For Date:"
        android:layout_below="@id/tv_mess_name"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 Aug 2020"
        android:layout_below="@id/tv_mess_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serving Now:"
        android:layout_below="@id/tv_date"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_serving"/>

    <TextView
        android:id="@+id/tv_serving_dish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sev Tamatar,Roti,Moong Dal,Fry Rice"
        android:layout_below="@id/tv_serving"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_serving_dish"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/ll1"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm Interested"
                android:tag="1"
                android:id="@+id/rb1"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sorry! Will Not Attend"
                android:layout_marginTop="20dp"
                android:tag="0"
                android:id="@+id/rb2"/>



        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/bt_mark_interest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mark Interest"
        android:layout_marginTop="50dp"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_roundable_button"/>
</RelativeLayout>